{
  "engines": {
    "node": "12.17.0"
  },
  "name": "server_v3",
  "version": "1.0.0",
  "description": "Another server for another app",
  "main": "main.js",
  "scripts": {
    "server": "node ./build/main.js",
    "dev": "npm-run-all build server",
    "build": "npm-run-all clean transpile",
    "start": "npm run build && node ./build/main.js",
    "transpile": "babel ./ --out-dir build --ignore ./node_modules",
    "clean": "rm -rf build && mkdir build",
    "watch:dev": "nodemon"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^5.3.3",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.7",
    "mongoose": "^5.9.12",
    "rootpath": "^0.1.2",
    "socket.io": "^2.3.0",
    "socketio-jwt": "^4.5.0",
    "@babel/preset-env": "^7.10.3",
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/runtime": "^7.10.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "./api/*",
      "./config/*",
      "./models/*",
      "./services/*",
      "./utils/*",
      "./main.js"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/.idea/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
